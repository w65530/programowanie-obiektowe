@model MVC_LAB.Models.Person.CreatePersonViewModel
@{
	ViewData["title"] = "Create Person";
}

<form method="post" asp-controller="Person" asp-action="CreateNewPerson">
	<div class="form-group">
		<label for="name">Name</label>
		<input type="text" class="form-control" id="name" placeholder="Name" name="name" />
	</div>
	<div class="form-group">
		<label for="city">City</label>
		<input type="text" class="form-control" id="city" placeholder="City" name="city" />
	</div>
	<div class="form-group">
		<label for="gender">Gender</label>
		<select class="form-control" id="gender" name="gender" required asp-items="@Model.Gender"></select>
	</div>
	<button class="btn btn-primary">Submit</button>
</form>