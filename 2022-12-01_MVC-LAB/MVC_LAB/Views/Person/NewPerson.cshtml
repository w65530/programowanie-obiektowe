@{
	ViewData["title"] = "Create Person";
}

<form method="post" asp-controller="Person" asp-action="CreateNewPerson">
	<div class="form-group">
		<label for="id">ID</label>
		<input type="number" class="form-control" id="id" placeholder="ID" name="id" />
	</div>
	<div class="form-group">
		<label for="name">Name</label>
		<input type="text" class="form-control" id="name" placeholder="Name" name="name" />
	</div>
	<div class="form-group">
		<label for="city">City</label>
		<input type="text" class="form-control" id="city" placeholder="City" name="city" />
	</div>
	<div class="form-group">
		<label for="gender">Gender</label>
		<input type="number" class="form-control" id="gender" placeholder="Gender" name="gender" />
	</div>
	<button class="btn btn-primary">Submit</button>
</form>