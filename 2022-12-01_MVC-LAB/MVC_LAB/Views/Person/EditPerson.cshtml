@model MVC_LAB.Models.Person.EditPersonViewModel
@{
	ViewData["title"] = "Edit Person";
}

<form method="post" asp-controller="Person" asp-action="EditPersonDetails">
	<div class="form-group">
		<label for="id">ID</label>
		<input type="number" class="form-control" id="id" placeholder="ID" name="id" readonly value="@Model.ID"/>
	</div>
	<div class="form-group">
		<label for="name">Name</label>
		<input type="text" class="form-control" id="name" placeholder="Name" name="name" value="@Model.Name"/>
	</div>
	<div class="form-group">
		<label for="city">City</label>
		<input type="text" class="form-control" id="city" placeholder="City" name="city" value="@Model.City"/>
	</div>
	<div class="form-group">
		<label for="gender">Gender</label>
		<select class="form-control" id="gender" name="gender" required asp-items="@Model.Gender"></select>
	</div>
	<button class="btn btn-primary">Submit</button>
</form>